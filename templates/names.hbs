  border-color: #ff6400;
  box-shadow: 0 0 0 3px rgba(255, 100, 0, 0.1);
}

/* Count input styling */
.names-module-count-input {
  width: 100px;
  padding: 10px 12px;
  border: 2px solid #e0e0e0;
