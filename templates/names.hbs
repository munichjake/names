  display: flex;
  gap: 12px;
  justify-content: center;
}

.names-module-action-btn {
  background: #6c757d;
  border: none;
  border-radius: 6px;
  color: white;
  padding: 10px 20px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 6px;
}

.names-module-action-btn:hover:not(:disabled) {
  background: #5a6268;
  transform: translateY(-1px);
}

.names-module-action-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

/* Help text styling */
.names-module-format-help {
  font-size: 12px;
  color: #666;
  margin-top: 6px;
  line-height: 1.4;
}

/* Section styling */
.names-module-section {
  margin-bottom: 32px;
}

.names-module-section h3 {
  margin: 0 0 20px 0;
  font-size: 18px;
  font-weight: 600;
  border-bottom: 2px solid #ff6400;
  padding-bottom: 8px;
}

/* Responsive design */
@media (max-width: 600px) {
  .names-module-checkbox-grid {
    grid-template-columns: 1fr;
  }
  
  .names-module-result-actions {
    flex-direction: column;
  }
  
  .names-module-action-btn {
    width: 100%;
    justify-content: center;
  }
}
</style>